{
  "name": "ruby.surge.sh",
  "version": "1.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve": "node -r esm server.js",
    "start": "node -r esm leanapp.js",
    "clean": "trash assets/* !.gitignore",
    "watch": "webpack -r esm --watch",
    "build": "webpack -r esm --env production",
    "gulp:nunjucks": "gulp --require esm nunjucksTask",
    "surge:clean": "trash surge/* !.gitignore",
    "surge:build": "npm run build -- --output-path surge/assets",
    "surge:deploy": "npm run surge:clean && npm run surge:build && npm run gulp:nunjucks && surge -p surge -d ruby.surge.sh"
  },
  "engines": {
    "node": "8.x"
  },
  "dependencies": {
    "antd": "^3.9.3",
    "body-parser": "^1.18.3",
    "bowser": "^1.9.4",
    "classnames": "^2.2.6",
    "cors": "^2.8.4",
    "dayjs": "^1.7.5",
    "draft-js": "^0.10.5",
    "esm": "^3.0.81",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "leancloud-storage": "^3.10.0",
    "leanengine": "^3.2.0",
    "lodash": "^4.17.10",
    "mobx": "^5.1.0",
    "mobx-react": "^5.2.5",
    "morgan": "^1.9.0",
    "query-string": "^6.1.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-if": "^3.1.1",
    "react-mde": "^5.8.0",
    "react-router": "^3.2.1",
    "simple-oauth2": "^2.2.1",
    "superagent": "^3.8.3",
    "tabler-react": "^1.19.1",
    "validator": "^10.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.0",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "fs-extra": "^7.0.0",
    "gulp": "^4.0.0",
    "gulp-nunjucks": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "nunjucks": "^3.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "trash-cli": "^1.4.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-manifest-plugin": "^2.0.3"
  }
}
